@using CodingEventsRefresh.ViewModels
@model AddEventCategoryViewModel

<h1>Add Event Category</h1>

<form asp-controller="EventCategory" asp-action="ProcessCreateEventCategoryForm" method="post">
    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Category" />
</form>